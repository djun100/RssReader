<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/rss_link_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="输入rss地址"
        android:text="" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/rss_type_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingLeft="10dp"
        android:hint="rss类别" >
	</TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/select_rss_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择rss地址" />

            <Button
                android:id="@+id/select_type_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择类别" />

            <Button
                android:id="@+id/add_rss_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认" />
        </LinearLayout>

        <EditText
            android:id="@+id/add_type_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" >
        </EditText>

        <Button
            android:id="@+id/add_type_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加类别" />

</LinearLayout>